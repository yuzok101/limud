<body>

<header>קורס: <span id="courseTitle">טוען...</span></header>

<div class="container" id="lessonsContainer">
  <!-- כרטיסי שיעורים יתווספו כאן -->
</div>

<!-- Modal לצפייה בסרטון -->
<div class="modal" id="videoModal">
  <div class="modal-content">
    <span class="close" id="closeModal">&times;</span>
    <video id="lessonVideo" controls controlsList="nodownload"></video>
  </div>
</div>

<script>
const API_URL = "https://script.google.com/macros/s/AKfycbxguZIdBZKUHrTy-8hLMxYIXCV7g5bsVNY3mOQgg1AU0v2giTisXG51lspgHeloXwHr/exec";
const userId = sessionStorage.getItem("userId");
const courseId = sessionStorage.getItem("courseId"); // צריך לשמור את מזהה הקורס אחרי כניסה/בחירה

if(!userId || !courseId){
    alert("לא מחובר או לא נבחר קורס");
    window.location.href = "login.html";
}

let lessons = [];

// משיכת שיעורים מה-API
function fetchLessons() {
    fetch(`${API_URL}?action=getLessons&courseId=${courseId}&userId=${userId}`)
    .then(res => res.json())
    .then(data => {
        if(data.success){
            document.getElementById("courseTitle").textContent = data.courseTitle;
            lessons = data.lessons; // מערך שיעורים עם {id, title, description, videoUrl, status}
            loadLessons();
        } else {
            alert("שגיאה בטעינת השיעורים: " + data.message);
        }
    })
    .catch(err => {
        console.error("Error fetching lessons:", err);
        alert("שגיאה בטעינת השיעורים");
    });
}

// יצירת כרטיסי שיעורים
function loadLessons() {
    const container = document.getElementById("lessonsContainer");
    container.innerHTML = "";
    lessons.forEach(lesson => {
        const card = document.createElement("div");
        card.className = "card";
        card.innerHTML = `
            <h3>${lesson.title}</h3>
            <p>${lesson.description}</p>
            <p>סטטוס: <span id="status-${lesson.id}">${lesson.status}</span></p>
            <button class="btn" onclick="openVideo(${lesson.id})">צפה בסרטון</button>
        `;
        container.appendChild(card);
    });
}

// פתיחת modal עם סרטון
function openVideo(lessonId) {
    const lesson = lessons.find(l => l.id === lessonId);
    const modal = document.getElementById("videoModal");
    const video = document.getElementById("lessonVideo");
    video.src = lesson.videoUrl;
    modal.style.display = "flex";

    // עדכון סטטוס InProgress אם לא התחילו
    if(lesson.status === "NotStarted"){
        lesson.status = "InProgress";
        document.getElementById(`status-${lesson.id}`).textContent = lesson.status;
        updateLessonStatus(lesson.id, lesson.status);
    }

    // מאזינים לסיום הסרטון
    video.onended = function() {
        lesson.status = "Completed";
        document.getElementById(`status-${lesson.id}`).textContent = lesson.status;
        updateLessonStatus(lesson.id, lesson.status);
    };
}

// סגירת modal
document.getElementById("closeModal").onclick = function() {
    const modal = document.getElementById("videoModal");
    const video = document.getElementById("lessonVideo");
    video.pause();
    video.src = "";
    modal.style.display = "none";
}

window.onclick = function(event) {
    const modal = document.getElementById("videoModal");
    if(event.target === modal){
        const video = document.getElementById("lessonVideo");
        video.pause();
        video.src = "";
        modal.style.display = "none";
    }
}

// שליחת סטטוס ל-Google Sheets
function updateLessonStatus(lessonId, status){
    fetch(`${API_URL}?action=updateLessonStatus&userId=${userId}&lessonId=${lessonId}&status=${status}`)
    .then(res => res.json())
    .then(data => {
        if(!data.success){
            console.error("Failed to update lesson status:", data.message);
        }
    })
    .catch(err => console.error("Error updating lesson status:", err));
}

// טוען את השיעורים בעת טעינת הדף
fetchLessons();
</script>

</body>
</html>
